11050 OX(1,3)=27:OY(1,3)=10:OT$(1,3)="   HARD   ":RV(1,2)=3
11060 OX(2,1)=14:OY(2,1)=14:OT$(2,1)=" ON ":RV(2,1)=4
11070 OX(2,2)=21:OY(2,2)=14:OT$(2,2)=" OFF ":RV(2,2)=5:OS(2,2)=1
11080 OX(3,1)=13:OY(3,1)=17:OT$(3,1)=" INSTRUCTIONS ":RV(3,1)=6
11090 OX(4,1)=17:OY(4,1)=20:OT$(4,1)=" QUIT ":RV(4,1)=7
11100 RETURN
