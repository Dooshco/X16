7 REM
8 REM
10 DIM OX(4,3):DIM OY(4,3):DIM OT$(4,3):DIM OS(4,3):DIM RV(4,3)
20 GOSUB 11000
30 CLS:CM=1:C=0
40 GOSUB 10000
50 IF RET=7 THEN END
60 IF RET=4 THEN PRINT"\X13MUSIC IS ON "
70 IF RET=5 THEN PRINT"\X13MUSIC IS OFF"
80 GOTO 40
9999 REM
10000 REM ===== DISPLAY OPTIONS =====
10001 REM
10010 COLOR DC,DB
10020 FOR N=1 TO OC:FOR M=1 TO OC(N)
10030 IF OS(N,M)=1 THEN COLOR SC,SB
10040 IF OS(N,M)=0 THEN COLOR DC,DB
10050 POKE $30D,OY(N,M):POKE $30E,OX(N,M):SYS$FFF0:PRINT OT$(N,M)
10060 NEXT M,N
10099 REM
10100 REM ===== PROCESS OPTIONS =====
10101 REM
10110 FOR N=1 TO 10:GET A$:NEXT N
10120 IF C<>0 THEN GOTO 10145
10125 C=1
10130 IF OS(CM,C)=0 AND C<=OC(CM) THEN C=C+1:GOTO 10130
10140 IF C>OC(CM) THEN C=1
10145 COLOR AC,AB
10150 POKE $30D,OY(CM,C):POKE $30E,OX(CM,C):SYS$FFF0:PRINT OT$(CM,C)
10160 GET A$:IF A$="" THEN GOTO 10160
10170 A=ASC(A$)
10200 IF A=32 OR A=13 THEN GOTO 10300
10210 IF A=157 THEN C=C-1:IF C=0 THEN C=OC(CM)
10220 IF A=29 THEN C=C+1:IF C>OC(CM) THEN C=1
10230 IF A=17 THEN C=0:CM=CM+1:IF CM>OC THEN CM=1
10240 IF A=145 THEN C=0:CM=CM-1:IF CM=0 THEN CM=OC
10250 GOTO 10010
10300 RET=RV(CM,C)
10310 FOR N=1 TO OC(CM):OS(CM,N)=0:NEXT N
10320 OS(CM,C)=1
10330 C=0
10340 RETURN
10999 REM
11000 REM ===== CONFIGURE OPTIONS =====
11001 REM
