1 REM ===== SPRITE ANIMATION =====
2 REM TESTED ON   : EMULATOR R.35
5 REM AUTHOR      : DUSAN STRAKL
6 REM MORE INFO   : 8BITCODING.COM
9 REM
10 REM ===== DEFINE SPRITE =====
11 REM
20 PRINT "INITIATING..."
30 M=0
40 FOR I=1 TO 6
50 FOR L=0 TO 15
60 READ D$
70 FOR N=1 TO 16
80 C$=MID$(D$,N,1)
90 V=0
100 IF C$="1" THEN V=16
110 IF C$="2" THEN V=48
120 IF C$="3" THEN V=47
130 IF C$="4" THEN V=38
140 IF C$="5" THEN V=87
150 IF C$="6" THEN V=199
160 VPOKE $0,$4000+M,V
170 M=M+1
180 NEXT N
190 NEXT L
200 NEXT I
209 REM
210 REM ===== INITIATE SPRITE =====
211 REM
220 VPOKE $F,$4000,1
230 VPOKE $F,$5008,$00
240 VPOKE $F,$5009,$80+$02
250 VPOKE $F,$500A,160
260 VPOKE $F,$500B,$00
270 VPOKE $F,$500C,100
280 VPOKE $F,$500D,$00
290 VPOKE $F,$500E,%00001100
300 VPOKE $F,$500F,%01010000
499 REM
500 REM ===== MAIN PROGRAM =====
501 REM
510 SCREEN 0
520 PRINT CHR$(149)+CHR$(1)+CHR$(147)
530 DIR=2:X=160:Y=100:I=0
540 DIM O(4,4):DIM F(4,4)
550 O(0,0)=16:O(0,1)=24:O(0,2)=16:O(0,3)=24
560 O(1,0)=32:O(1,1)=40:O(1,2)=32:O(1,3)=40
570 O(2,0)=0:O(2,1)=8:O(2,2)=0:O(2,3)=8
580 O(3,0)=32:O(3,1)=40:O(3,2)=32:O(3,3)=40
590 F(0,3)=1:F(2,3)=1:F(3,0)=1:F(3,1)=1:F(3,2)=1:F(3,3)=1
600 REM ===== GAME LOOP =====
610 J=JOY(1):IF J=0 GOTO 610
620 IF J=4 THEN DIR=2:Y=Y+1
630 IF J=8 THEN DIR=0:Y=Y-1:IF Y<0 THEN Y=0
640 IF J=2 THEN DIR=3:X=X-1:IF X<0 THEN X=0
650 IF J=1 THEN DIR=1:X=X+1
660 I=I+1
670 IF I=4 THEN I=0
680 VPOKE $F,$500A,X AND $FF:VPOKE $F,$500B,INT(X/256)
690 VPOKE $F,$500C,Y AND $FF:VPOKE $F,$500D,INT(Y/256)
700 VPOKE $F,$5008,O(DIR,I)
710 VPOKE $F,$500E,$0C+F(DIR,I)
720 GOTO 610
999 REM
1000 REM ===== SPRITE GRAPHICS =====
1001 REM
